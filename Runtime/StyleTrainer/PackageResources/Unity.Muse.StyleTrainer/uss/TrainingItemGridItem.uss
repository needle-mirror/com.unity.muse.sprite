.styletrainer-trainingitemgriditem {
}


.styletrainer-trainingitemgriditem__deletebutton {
    position: absolute;
    top: 5px;
    right: 5px;
    display: none;
}

.styletrainer-trainingitemgriditem__previewimage {
    width: 100%;
    height: 100%;
    flex-grow: 1;
    flex-shrink: 1;
    justify-content: center;
    align-items: center;
}

.styletrainer-trainingitemgriditem__promptField {

}

.styletrainer-trainingitemgriditem__gridItem {
    width: 100%;
    height: 100%;
    flex-grow: 1;
    flex-shrink: 1;
    border-radius: var(--appui-alias-control-border-radius);
    overflow: hidden;
    border-width: 3px;
    border-color: var(--appui-backgrounds-300);
}

.appui-grid-view__item.is-selected  .styletrainer-trainingitemgriditem__gridItem{
    border-width: 3px;
    border-color: var(--appui-accent-100);
}

*:hover > .styletrainer-trainingitemgriditem__deletebutton {
    display: flex;
}

.styletrainer-trainingsetview-gridview-disable .styletrainer-trainingitemgriditem__deletebutton {
    display: none;
}

.is-selected .delete-button-webgl {
    display: flex;
}