.appui-sprite-keyimage {
    overflow: hidden;
}

.appui-sprite-keyimage__image-container {
    border-width: var(--appui-alias-control-border-width);
    background-color: var(--appui-base-100);
    border-color: var(--appui-base-400);
}
.appui-sprite-keyimage__accept-drag .appui-sprite-keyimage__image-container {
    border-color: var(--appui-accent-300);
}

.appui-sprite-keyimage__control-buttons-container {
    flex-direction: row;
}

.appui-sprite-keyimage__control-buttons-container-left {
    flex-direction: row;
    justify-content: flex-start;
}

.appui-sprite-keyimage__control-buttons-container-right {
    flex-direction: row;
    margin-left: auto;
    justify-content: flex-end;
}

.appui-sprite-keyimage__reference-image {
    flex-grow: 1;
    position: absolute;
}